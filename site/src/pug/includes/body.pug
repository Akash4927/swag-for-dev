            p swag opportunities for developers üòé

        .buttons.flex

            .top.flex
                .item.flex
                    label Show
                    .select-wrapper
                        select(name="show")#filter
                            for filter in ['All difficulties', 'Easy', 'Medium', 'Hard']
                                option(value=filter) #{filter}

                .item.flex
                    label In
                    .select-wrapper
                        select(name="order")#sorting
                            for filter in ['Alphabetical', 'Alphabetical, reversed', 'Difficulty', 'Difficulty, reversed']
